<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="50dp">

    <TextView
        android:id="@+id/textViewItemListViewPostIDPostNewsFeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="post ID"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <com.polygons.facingapp.tools.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="3dp"
            android:src="@drawable/thumbnail" />

        <TextView
            android:id="@+id/textViewItemListViewFullNamePostNewsFeed"
            style="@style/NewsFeedPostFullName"
            android:text="Name" />

        <TextView
            android:id="@+id/textViewItemListViewTimePostGoneNewsFeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="time"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewItemListViewTimePostNewsFeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="time" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewItemListViewPostNewsFeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="16dp"
            android:text="post" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/playbutton" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/replyvideo"
                android:visibility="gone" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonPostLike"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/unlike" />

        <Button
            android:id="@+id/buttonPostUnLike"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/like"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewPostTotalLikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="0 Like" />

        <Button
            android:id="@+id/buttonShare"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/share" />

        <TextView
            android:id="@+id/textViewPostTotalShares"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="0 Share" />


    </LinearLayout>

    <!--Hidden Fields-->
    <TextView
        android:id="@+id/textViewProfilePicURL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textViewComments"
        android:layout_width="wrap_content" android:text="comments"
        android:layout_height="wrap_content"
        android:visibility="gone" />
</LinearLayout>